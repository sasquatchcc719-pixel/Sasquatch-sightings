# --- SASQUATCH TOOLS ---

# 1. The Brain (Anthropic)
ANTHROPIC_API_KEY=your-key-here

# 2. The Map (Mapbox)
NEXT_PUBLIC_MAPBOX_TOKEN=your-token-here

# 3. The Database (Supabase)
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# 4. Google Business Profile Automation
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token
GOOGLE_LOCATION_ID=your-location-id
GOOGLE_ACCOUNT_ID=

# 5. Zapier Integration
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-webhook-url

# 6. RingCentral Integration
# Get these from: https://developers.ringcentral.com/
RINGCENTRAL_CLIENT_ID=your-client-id
RINGCENTRAL_CLIENT_SECRET=your-client-secret
RINGCENTRAL_USERNAME=your_ringcentral_phone_number_or_email
RINGCENTRAL_PASSWORD=your_ringcentral_password
RINGCENTRAL_EXTENSION=
RINGCENTRAL_PHONE_NUMBER=your-ringcentral-phone-number

# JWT Private Key (download from RingCentral Developer Console)
RINGCENTRAL_JWT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
your-private-key-here
-----END RSA PRIVATE KEY-----"

# 7. OneSignal Push Notifications (backup for desktop notifications)
# Get these from: https://onesignal.com/
ONESIGNAL_APP_ID=your-app-id-here
ONESIGNAL_API_KEY=your-rest-api-key-here

# 8. Twilio SMS Notifications (PRIMARY notification method)
# Get these from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your-account-sid-here
TWILIO_AUTH_TOKEN=your-auth-token-here
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX  # Your Twilio phone number
ADMIN_PHONE_NUMBER=+1XXXXXXXXXX  # Admin's phone (receives all alerts)

# 9. OpenAI API (AI Dispatcher)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
AI_DISPATCHER_ENABLED=false  # Set to 'true' to enable AI responses (default: false for safety)

# 10. HousecallPro Booking
HOUSECALLPRO_BOOKING_URL=https://book.housecallpro.com/book/your-company-url

# 11. Cron Job Security
CRON_SECRET=your-random-secret-here  # For securing cron endpoints

